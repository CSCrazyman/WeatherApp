<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.v7.widget.CardView
        android:id="@+id/first_card"
        android:layout_width="0dp"
        android:layout_height="170dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/colorSearchInputBox"
        app:cardCornerRadius="2mm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        card_view:cardElevation="0dp">

        <ImageView
            android:id="@+id/weather_condition"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginLeft="53dp"
            android:layout_marginTop="30dp" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/temperature_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="33dp">

            <TextView
                android:id="@+id/temperature_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="38sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/temperature_status"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="156dp"
            android:layout_marginTop="78dp"
            android:textColor="@color/colorSearchHint"
            android:textSize="18sp"
            android:ellipsize="end"
            android:maxLines="2"
            android:singleLine="false" />

        <TextView
            android:id="@+id/city_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="135dp"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/information"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="351dp"
            android:layout_marginTop="139dp"
            android:src="@drawable/information" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/second_card"
        android:layout_width="0dp"
        android:layout_height="126dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="15dp"
        app:cardBackgroundColor="@color/colorSearchInputBox"
        app:cardCornerRadius="2mm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_card"
        card_view:cardElevation="0dp">

        <ImageView
            android:id="@+id/humidity"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/water_percent" />

        <TextView
            android:id="@+id/humidity_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="66dp"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/humidity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="94dp"
            android:text="@string/humidity"
            android:textColor="@color/colorSearchHint"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/wind_speed"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="113dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/windy" />

        <TextView
            android:id="@+id/wind_speed_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="96dp"
            android:layout_marginTop="66dp"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/wind_speed_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="94dp"
            android:layout_marginTop="94dp"
            android:text="@string/wind_speed"
            android:textColor="@color/colorSearchHint"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/visibility"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="208dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/eye" />

        <TextView
            android:id="@+id/visibility_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="203dp"
            android:layout_marginTop="66dp"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/visibility_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="204dp"
            android:layout_marginTop="94dp"
            android:text="@string/visibility"
            android:textColor="@color/colorSearchHint"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/gauge"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="308dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/gauge" />

        <TextView
            android:id="@+id/gauge_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="284dp"
            android:layout_marginTop="66dp"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/gauge_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="94dp"
            android:text="@string/pressure"
            android:textColor="@color/colorSearchHint"
            android:textSize="18sp" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/third_card"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="15dp"
        app:cardBackgroundColor="@color/colorSearchHint"
        app:cardCornerRadius="2mm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/second_card"
        card_view:cardElevation="0dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/third_card_single"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/favorite_weather_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="86dp"
        android:src="@drawable/unfavorite"
        app:backgroundTint="@color/colorItemPurple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>